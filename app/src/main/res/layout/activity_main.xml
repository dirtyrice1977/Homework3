<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mike77.app.MainActivity"
    tools:ignore="MergeRootFrame" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context=".LinearLayout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:background="#3499db"
            android:id="@+id/layout_header">

            <TextView
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Calorie Buster"
                android:id="@+id/txt_title"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="right|center"
                android:layout_gravity="center_vertical"
                android:paddingRight="20dp"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/scale2"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/layout_activity"
            >
            <Button
                android:id="@+id/btn_swim"
                android:text="Swim"
                android:drawableTop="@drawable/swim"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#454CE1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:paddingTop="8dp"
                android:onClick="getCalories"
                />
            <Button
                android:id="@+id/btn_run"
                android:text="Run"
                android:drawableTop="@drawable/run"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#454CE1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:paddingTop="8dp"
                android:onClick="getCalories"
                />

            <Button
                android:id="@+id/btn_bike"
                android:text="Bike"
                android:drawableTop="@drawable/bike"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#454CE1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:paddingTop="8dp"
                android:onClick="getCalories"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/layout_activity"
            >
            <Button
                android:id="@+id/btn_slow"
                android:text="slow"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="#ffa430"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:onClick="getSpeed"
                />
            <Button
                android:id="@+id/btn_medium"
                android:text="medium"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="#ffa430"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:onClick="getSpeed"

                />
            <Button
                android:id="@+id/btn_fast"
                android:text="fast"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="#ffa430"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:onClick="getSpeed"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_entry"
            android:weightSum="1">

            <EditText
                android:id="@+id/txt_minutes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:textSize="25sp"
                android:textAlignment="center"
                android:hint="Enter time in minutes"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="2.25" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_entry"
            android:weightSum="1">

            <EditText
                android:id="@+id/txt_pounds"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:hint="Enter weight in Pounds"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#3499db"
            android:orientation="vertical"
            android:id="@+id/layout_speed"
            >
            <Button
                android:id="@+id/btn_calculate"
                android:text="Calculate"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#3499db"
                android:layout_gravity="center_horizontal"
                android:onClick="calculateWeightLoss"/>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>